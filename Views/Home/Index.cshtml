@using WeddingPlanner.Models
@model Users
<h1>Register to this Cool Site!</h1>
<h3><a href="/signin">Login</a></h3>
<form asp-action="register" asp-controller="Home" method="post">
    <span asp-validation-for="FirstName"></span>
    <p>First Name: <input asp-for="FirstName"></p>
    <span asp-validation-for="LastName"></span>
    <p>Last Name: <input asp-for="LastName"></p>
    <span asp-validation-for="Email"></span>
    <p>Email: <input asp-for="Email"></p>
    <span asp-validation-for="Password"></span>
    <p>Password <input type="password" asp-for="Password"></p>
    <span asp-validation-for="Confirm"></span>
    <p>Confirm Password <input type="password" asp-for="Confirm"></p>
    <input type='submit' value="Sign up Now">
</form>